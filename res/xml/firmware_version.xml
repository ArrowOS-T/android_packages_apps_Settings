<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:title="@string/firmware_information"
    settings:keywords="@string/keywords_android_version">

    <!-- Firmware Header -->
    <com.android.settingslib.widget.LayoutPreference
        android:key="firmware_header"
        android:layout="@layout/firmware_header_layout"
        settings:controller="com.android.settings.deviceinfo.firmwareversion.controller.FirmwareHeaderPreferenceController"
        android:selectable="false"/>

    <PreferenceCategory
        android:key="firmware_version_category"
        android:selectable="false"
        android:title="@string/firmware_version_category_title">    

        <!-- Arrow version -->
        <Preference
            android:key="arrow_version"
            android:title="@string/arrow_version"
            android:summary="@string/summary_placeholder"
            settings:enableCopying="true"
            settings:searchable="false"
            settings:layout="@layout/card_preference_top"
            settings:controller="com.android.settings.deviceinfo.firmwareversion.ArrowVersionDetailPreferenceController"/>

        <!-- Device name -->
        <Preference
            android:key="about_device_name"
            android:title="@string/about_device_name"
            android:summary="@string/summary_placeholder"
            settings:enableCopying="true"
            settings:layout="@layout/card_preference_bottom"
            settings:controller="com.android.settings.deviceinfo.firmwareversion.AboutDeviceNamePreferenceController"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="firmware_security_category"
        android:selectable="false"
        android:title="@string/firmware_security_category_title">        

        <!-- Security patch -->
        <Preference
            android:key="security_key"
            android:title="@string/security_patch"
            settings:enableCopying="true"
            settings:layout="@layout/card_preference_single"
            settings:controller="com.android.settings.deviceinfo.firmwareversion.SecurityPatchLevelPreferenceController"/>
    </PreferenceCategory>        

    <!-- Mainline module version
    <Preference
        android:key="module_version"
        android:title="@string/module_version"
        android:summary="@string/summary_placeholder"
        settings:enableCopying="true"
        settings:controller="com.android.settings.deviceinfo.firmwareversion.MainlineModuleVersionPreferenceController"/ -->

    <PreferenceCategory
        android:key="firmware_general_category"
        android:selectable="false"
        android:title="@string/firmware_general_category_title">

        <!-- Baseband -->
        <Preference
            android:key="base_band"
            android:title="@string/baseband_version"
            android:summary="@string/summary_placeholder"
            settings:enableCopying="true"
            settings:layout="@layout/card_preference_top"
            settings:controller="com.android.settings.deviceinfo.firmwareversion.BasebandVersionPreferenceController"/>

        <!-- Kernel -->
        <Preference
            android:key="kernel_version"
            android:title="@string/kernel_version"
            android:summary="@string/summary_placeholder"
            settings:enableCopying="true"
            settings:layout="@layout/card_preference_middle"
            settings:controller="com.android.settings.deviceinfo.firmwareversion.KernelVersionPreferenceController"/>

        <!-- Build -->
        <Preference
            android:key="os_build_date"
            android:title="@string/build_date"
            android:summary="@string/summary_placeholder"
            settings:enableCopying="true"
            settings:layout="@layout/card_preference_bottom"
            settings:controller="com.android.settings.deviceinfo.firmwareversion.BuildDatePreferenceController"/>
    </PreferenceCategory>        

    <!-- Build Number
    <Preference
        android:key="os_build_number"
        android:title="@string/build_number"
        android:summary="@string/summary_placeholder"
        android:selectable="false"
        settings:enableCopying="true"
        settings:controller="com.android.settings.deviceinfo.firmwareversion.SimpleBuildNumberPreferenceController"/> -->

</PreferenceScreen>